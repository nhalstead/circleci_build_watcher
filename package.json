{
  "name": "circleci_build_watcher",
  "version": "1.0.0",
  "description": "Watch CircleCI Builds without the extra tabs in chrome.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder",
    "build": "electron-builder"
  },
  "author": "Noah Halstead",
  "license": "MIT",
  "build": {
    "appId": "nhalstead.circleciWatcher",
    "productName": "CircleCI Build Watcher",
    "directories": {
      "output": "build",
      "buildResources": "src/assets"
    },
    "extraFiles": [
      "src/assets"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.nhalstead.me"
      }
    ]
  },
  "dependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-updater": "^4.2.5"
  }
}
