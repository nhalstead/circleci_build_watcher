{
  "name": "circleci_build_watcher",
  "author": "Noah Halstead <nhalstead00@gmail.com>",
  "license": "MIT",
  "version": "1.0.1",
  "description": "Watch CircleCI Builds without the extra tabs in chrome.",
  "main": "src/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "wait-on": "^4.0.2"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "cross-env": "^5.2.0",
    "electron": "^8.3.4",
    "electron-builder": "^22.5.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.2.0"
  },
  "scripts": {
    "web-start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "concurrently \"cross-env BROWSER=none PORT=3933 yarn react-scripts start\" \"wait-on http://localhost:3933 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64 --macos --win --linux -p always",
    "package": "electron-builder build --linux -c.extraMetadata.main=src/electron.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nhalstead",
        "repo": "circleci_build_watcher"
      }
    ],
    "appId": "nhalstead.circleciWatcher",
    "productName": "CircleCI Build Watcher",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Development",
      "icon": "logo512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "extraFiles": [
      "src/assets"
    ]
  }
}
